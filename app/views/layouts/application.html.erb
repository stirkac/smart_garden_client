<!DOCTYPE html>
<html>
<head>
  <title>SmartGarden - the easiest, opensource way to monitor your garden</title>
  <meta name="theme-color" content="#4acaa8">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="wrapper">

			<!-- Header -->
				<section id="header" class="skel-layers-fixed">
					<header>
						<span class="image avatar"><%= image_tag "leaf.png" %></span>
						<h1 id="logo"><%=link_to "My Smart Garden", root_path %></h1>
						<% if current_user.present? %>
							<p><small>Signed in as</small></p>
							<p class="move-up-md"><%=current_user.grows.count > 1 ? link_to("#{current_user.email}", grows_path) : "#{current_user.email}"%></p>
							<% if display_navigation %>
								<p><%=link_to "add a new garden", new_grow_path, class: "icon fa-plus"%></p>
							<% end %>
						<% else %>
							<p>All you need for perfect crop</p>
						<% end %>
					</header>
					<% if display_navigation %>
						<nav id="nav">
							<ul>
								<li><a href="#one" class="active">Overview</a></li>
								<li><a href="#two">Notificatons</a></li>
								<li><a href="#three">Schedules</a></li>
								<li><a href="#four">Settings</a></li>
							</ul>
						</nav>
					<% end %>
					<footer>
						<ul class="icons">
							<li><a href="https://twitter.com/stirkac" class="icon fa-twitter">follow<span class="label">Twitter</span></a></li>
							<li><a href="http://facebook.com/sebastjan.stojnsek" class="icon fa-thumbs-up">like<span class="label">Facebook</span></a></li>
						</ul>
					</footer>
				</section>

			<!-- Main -->
				<div id="main">
					<% flash.each do |key, value| %>
						<div id="alert" class="alert alert-<%= key %>"><%= value %></div>
					<% end %>
					<%= yield %>
				</div>

			<!-- Footer -->
				<section id="footer">
					<div class="container">
						<ul class="copyright">
							<li>&copy; Sebastjan Stojn≈°ek</li><li><%=DateTime.now.year%></li>
						</ul>
					</div>
				</section>

		</div>
</body>
</html>
