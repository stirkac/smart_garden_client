<section id="two">
  <div class="container">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "move-down" %><br />
        <%= f.email_field :email, autofocus: true, class: "move-up-lg", placeholder: "you@example.com" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "move-down" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "move-up-lg", placeholder: "minimum #{@minimum_password_length} characters" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "move-down" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "move-up-lg", placeholder: "enter the password again" %>
      </div>

      <div class="actions move-down">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</section>
