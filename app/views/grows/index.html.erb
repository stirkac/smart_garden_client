<section id="one">
	<div class="container">
		<h2>My Gardens</h2>
		<p>Overview your gardens from here</p>
		<div class="features">
			<%@grows.each do |grow| %>
				<article>
					<%=link_to image_tag(grow.image_url), grow, class: "image"%>
					<div class="inner">
						<%=link_to grow do  %>
						<h4><%=grow.name%></h4>
						<p><%=grow.description%><br><i>(<%=grow.latin%>)</i></p>
						<p><small><%=grow.notifications.not_dismissed.count%> 
						<%="notification".pluralize grow.notifications.not_dismissed.count %> pending</small></p>
						<% end %>
					</div>
				</article>
			<%end%>
		</div>
		<h3>Another garden?</h3>
		<p class="move-down">Add a new sensor device and garden by following the link below.</p>
		<%=link_to "Add new Garden", new_grow_path, class: "button special move-up" %>
	</div>
</section>

