			small: { media: '(max-width: 736px)', href: '<%= asset_path("skel/style-small.css")%>', containers: '90%!', grid: { gutters: ['1.25em', 0] } },
			xsmall: { media: '(max-width: 480px)', href: '<%= asset_path("skel/style-xsmall.css")%>' }
		}
});
